<% include meta %>
	<link rel="stylesheet" href="/stylesheets/news.css">
	<title>Постановки</title>
<% include header %>
	<div class="news-block">
		<h1 class="first-block"><span>Постановки</span></h1>
		<div class="content">
			<% news.forEach( function (post) { %>
				<a href="news-page/<%= post.id %>">
					<div class="flex-container">
						<div>
							<div>
								<h2><%= post.title %></h2>
								<p><%= post.text.substring(0,200) %>...</p>
								<p class="details">Подробнее...</p>
								<footer><i class="far fa-clock"></i> <%= moment(post.date).format('DD-MM-YYYY') %></footer>
							</div>
						</div>
						<img src='<%= post.img %>' alt="img">
					</div>
				</a>
			<% }); %>
	</div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="/javascripts/script.js"></script>
	<script src="/javascripts/lifeload.js"></script>
<% include footer %>
