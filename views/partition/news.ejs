<% include meta %>
	<link rel="stylesheet" href="/stylesheets/news.css">
	<title>Постановки</title>
<% include header %>
	<div class="news-block">
		<h1 class="first-block"><span>Постановки</span></h1>
		<div class="content">
			<% news.forEach( function (post) { %>
				<a href="news-page/<%= post.id %>">
					<div class="grid-container" data-id="<%= post.id %>">
						<div class="date">
							<p class="number"><%= new Date(post.date).toDateString().split(' ')[2] %></p>
							<p class="month"><%= ['Января','Февраля','Марта','Апреля','Мая','Июня','Июля','Августа','Сентября','Октября','Ноября','Декабря'][new Date(post.date).getMonth()] %></p>
							<p class="year"><%= new Date(post.date).getFullYear() %></p>
							<p class="time"><i class="th-clock"></i><%= post.time %></p>
						</div>
						<div class="description">
							<h2><%= post.title %></h2>
							<p><%= post.text.substring(0,200) %>...</p>
							<p class="details">Подробнее...</p>
						</div>
						<div class="img-block">
							<img src='<%= post.img %>' alt="img">
						</div>
						
					</div>
				</a>
			<% }); %>
		</div>
	</div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
	<script src="/javascripts/script.js"></script>
	<script src="/javascripts/lifeload.js"></script>
<% include footer %>
