<% include meta %>
	<link rel="stylesheet" href="/stylesheets/gallery.css">
	<link rel="stylesheet" href="/stylesheets/modalIMG.css">
	<link rel="stylesheet" href="/stylesheets/UI.css">
	<title>Галерея</title>
	<% include header %>

	<div class="gallery">
		<h1 class="first-block"><span>Галерея</span></h1>
		<div class="content-gal">
			<div class="col">
				<% for (let i=0; i < gallery.length; i+=3) { %>
					<div onclick="currentSlide(this)">
						<img src="<%= gallery[i].img %>" alt="img">
						<p>+</p>
					</div>
				<% } %>
			</div>
			<div class="col">
				<% for (let i=1; i < gallery.length; i+=3) { %>
					<div onclick="currentSlide(this)">
						<img src="<%= gallery[i].img %>" alt="img">
						<p>+</p>
					</div>
				<% } %>
			</div>
			<div class="col">
				<% for (let i=2; i < gallery.length; i+=3) { %>
					<div onclick="currentSlide(this)">
						<img src="<%= gallery[i].img %>" alt="img">
						<p>+</p>
					</div>
				<% } %>
			</div>
		</div>
	</div>
	<div class="modal-img">

		<div class="close-modal-btn" onclick="closeModal()"></div>
		<div class="close-modal-btn" onclick="closeModal()"></div>
		<div class="img-block">
			<img src="." alt="img" onclick="closeModal()">
		</div>
		<div class="arrow-btn left-btn" onclick="changeSlide(-1)"></div>
		<div class="arrow-btn right-btn" onclick="changeSlide(1)"></div>
	</div>

	<script src="/javascripts/script.js"></script>
	<script src="/javascripts/gallery.js"></script>
<% include footer %>
